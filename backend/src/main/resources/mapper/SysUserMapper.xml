<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.epms.mapper.SysUserMapper">
    
    <resultMap id="SysUserResultMap" type="com.epms.entity.SysUser">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="role" column="role"/>
        <result property="relatedEmpId" column="related_emp_id"/>
    </resultMap>
    
    <!-- 根据用户名查询 -->
    <select id="selectByUsername" resultMap="SysUserResultMap">
        SELECT user_id, username, password, role, related_emp_id
        FROM sys_user
        WHERE username = #{username}
    </select>
    
    <!-- 插入用户 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO sys_user (username, password, role, related_emp_id)
        VALUES (#{username}, #{password}, #{role}, #{relatedEmpId})
    </insert>
    
    <!-- 更新用户 -->
    <update id="update">
        UPDATE sys_user
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="role != null">role = #{role},</if>
            <if test="relatedEmpId != null">related_emp_id = #{relatedEmpId},</if>
        </set>
        WHERE user_id = #{userId}
    </update>
    
</mapper>

